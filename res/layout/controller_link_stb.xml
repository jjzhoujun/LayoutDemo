        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_toRightOf="@id/controller_tips_ly"
            android:layout_alignTop="@id/controller_tips_ly"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="60dp"
            android:orientation="vertical">
   
            
            <TextView
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:text="在左侧列表切换通道，直到右侧窗口显示机顶盒界面信号界面为止，即设置成功。"
                android:textColor="@color/black"
                android:textSize="19sp"
                />
            
            <Button
                android:id="@+id/controller_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="right"
                android:background="@drawable/wifi_connect_button"
                android:text="下一步"
                android:textSize="36sp"
                android:textColor="@color/white"
                />
            
        </LinearLayout>
        
    </RelativeLayout>
    
